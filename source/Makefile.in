srcdir = @srcdir@
VPATH = @srcdir@

include @top_srcdir@/mk/gnu.bsdvars.mk

.SUFFIXES :
.SUFFIXES : .html .xhtml .js .xml .xpl .xbl

RESOURCES = xpl2js.xsl
TARGETS = xpl xpl2js

# Rules
all : build

build : ${TARGETS}

install : ${TARGETS}
	[ -d ${pkglibexecdir} ] || ${INSTALL} -d ${pkglibexecdir}
	for FILE in ${TARGETS}; do\
		${INSTALL} $${FILE} ${pkglibexecdir}/$${FILE};\
	done
	for FILE in ${RESOURCES}; do\
		${INSTALL} ${srcdir}/$${FILE} ${pkglibexecdir}/$${FILE};\
	done

clean : 
	-rm ${TARGETS}

xpl: XPL.pl lib/Meeko/XPL.js
	cat ${.ALLSRC} > ${.TARGET}
	
xpl2js: xpl2js.pl
	cp ${.IMPSRC} ${.TARGET}
	
